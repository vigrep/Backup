#{{{ RS define

#åœ¨finder ä¸­æ‰“å¼€å½“å‰è·¯å¾„
function xpl {
     if [ "$1" = "" ]; then
         XPATH=.   # ç¼ºçœæ˜¯å½“å‰ç›®å½•
     else
         XPATH=$1
         XPATH="$(cygpath -C ANSI -w "$XPATH")";
     fi
     open $XPATH
}

# è·¨ç›®å½•cd
# å‘½ä»¤: cdcd main
# function cdcd {
# 	#RES_PATH="$(find . -name "$1")";
# 	RES_PATH=`find . -name "$1"`;
# 	if [ "$RES_PATH" = "" ];then
# 		echo "no such file or directory : $1";
# 	else
# 		cd "$RES_PATH";
# 	fi
# }

# cdcd å‡çº§ç‰ˆ
# å¦‚æœæœ‰é‡å¤ç›®å½•ï¼Œå¯æä¾›å€™é€‰é¡¹è¿›è¡Œè·³è½¬
# ç›®å½•åé‡å¤çš„æƒ…å†µä¸‹, åˆ—å‡ºå€™é€‰é¡¹
function cdcd {
	array=()
	while IFS=  read -r -d $'\0'; do
    		array+=("$REPLY")
	done < <(find . -name ${1} -print0)

	len=${#array[*]}
	if [ $len -gt 1 ];then
		for ((i=1; i<=$len; i++));
		do
			echo_str=">[$i] ${array[$i]}"
			echo $echo_str
		done

		echo "å‘ç°å¤šä¸ªç›®å½•ï¼Œè¯·è¾“å…¥åºå·: "
		while true
		do
			read path_index
			if [[ "$path_index" =~ [^0-9] ]];then
				echo "è¯·è¾“å…¥æ•´æ•°:"
			elif [[ $path_index -ge 1 && $path_index -le $len ]];then
				echo $path_index
				break
			else
				echo "è¯·è¾“å…¥1-${len}:"
			fi
		done

		cd ${array[$path_index]}
	elif [ $len -eq 1 ];then
		cd ${array[1]}
	else
		echo "æ²¡æœ‰æ‰¾åˆ°è¯¥ç›®å½•"
	fi
}

# æŸ¥æ‰¾æŸä¸ªæ–‡ä»¶å¹¶æ‰“å¼€(å¯è·¨ç›®å½•): vifi
# å‘½ä»¤: vifi xxx.java
function vifi {
	RES_PATH=`find . -name "$1"`;
	if [ "$RES_PATH" = "" ];then
		echo "no such file or directory : $1";
	else
		vi "$RES_PATH";
	fi
}

# æŸ¥æ‰¾æŸä¸ªå­—ç¬¦å¹¶åœ¨viä¸­æ‰“å¼€, å¹¶å®šä½åˆ°è¯¥å­—ç¬¦ç¬¬ä¸€æ¬¡å‡ºç°çš„ä½ç½®: vigrep
# å‘½ä»¤: vigrep FIXME
function vigrep {
	RES_PATH=`grep -ri "$1" * -l`;
	if [ "$RES_PATH" = "" ];then
		echo "no such words : $1";
	else
		vi `grep -ri "$1" * -l` +/$1;
	fi
}

